{
  "name": "ui-shared-header",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ui-shared/header/src",
  "prefix": "mvse",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/ui-shared/header/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ui-shared/header/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/ui-shared/header/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ui-shared/header/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/ui-shared/header/**/*.ts",
          "packages/ui-shared/header/**/*.html"
        ]
      }
    }
  },
  "tags": ["type:ui", "scope:client"]
}
